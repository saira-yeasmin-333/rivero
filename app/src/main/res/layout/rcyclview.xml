<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:backgroundTint="#081929"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="60dp"
                android:text="AREA NAME"
                android:textSize="26dp"
                android:id="@+id/area_name"
                android:textColor="#FFC800"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:textStyle="bold"
                />


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="60dp"
                android:paddingTop="12dp"
                android:layout_gravity="left"
                android:id="@+id/delete_main"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Population"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/population_value"
                    android:layout_height="wrap_content"
                    android:text="POL"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Erosion Rate"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ER"
                    android:id="@+id/erosion_Rate_value"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Estimated Loss"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="EL"
                    android:id="@+id/loss_value"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Deadline to Erosion"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DTE"
                    android:id="@+id/deadline_value"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:maxLines="5"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>